
<!-- Header -->
<%- include('include/_header') %>
<!-- /Header -->

<!-- Main -->
<div class="container mb-5">
    <h1 class="text-center text-capitalize">Contact Us</h1>
    <hr class="w-25 mx-auto">

    <form action="" class="w-50 mx-auto">
        <div class="form-group">
            <label for="name" class="text-success">Your Name : </label>
            <input type="text" required name="name" class="form-control" placeholder="Enter Your Name">
        </div>
        <div class="form-group">
            <label for="email" class="text-success">Email : </label>
            <input type="email" required name="email" class="form-control" placeholder="Enter Your email">
        </div>
        <div class="form-group"> 
            <label for="mobile" class="text-success">Mobile No : </label>
            <input type="number" required name="mobile" class="form-control" placeholder="Enter Mobile Number">
        </div>
        <div class="form-group"> 
            <label class="text-success">Address : </label>
            <textarea class="form-control" ></textarea>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label text-success">
                <input type="checkbox" name="" class="form-check-input">Remember me
            </label>
        </div>
        <div>
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<!-- /Main -->

<!-- Footer -->
<%- include('include/_footer') %>
<!-- /Footer -->