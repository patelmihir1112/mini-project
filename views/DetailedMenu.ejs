
<!-- Header -->
<%- include('include/_header') %>
<!-- /Header -->

<!-- Main -->
<main class="container">
    <div class="row">
        <div class="card-columns pt-5">
            <% for(var i = 0; i < result.length; i++) { %>
                <div class="card" style="width: 322px;">
                    <img src="Img/<%= result[i].Image %>" style="width:100%;height: 200px;" class="mx-auto">
                    <center class="display-5 font-weight-bold"><%= result[i].Name %></center>
                    <center><i>Price : <%= result[i].Price %></i></center>
                    <a href=" Order " class="btn btn-warning">Order</a>
                </div>
            <% } %>
        </div> 
    </div>
    <div class="" style="float: right;background-color: rgb(151, 197, 151);">
        <h3 style="background-color: orange;text-align: center;">My Order</h3>
        <table border="1px" width="100%" cellspacing="5" cellpadding="15">
            <thead>
                <th>Sr_No</th><th>Item</th><th>No</th><th>Price</th><td> Delete </td>
            </thead>
            <tbody>
                <tr bgcolor="pink"><td>1</td><td>Chocolate icecraeam</td><td>2</td><td>120</td><td><a href="#" class="text-danger">X</a></td></tr>
                <tr bgcolor="pink"><td>2</td><td>Starwberry ice cream</td><td>1</td><td>70</td><td><a href="#" class="text-danger">X</a></td></tr>
                <tr bgcolor="pink"><td>3</td><td>Vanilla ice cream</td><td>3</td><td>50</td><td><a href="#" class="text-danger">X</a></td></tr>
                <tr bgcolor="pink"><td>4</td><td>Pista ice cream</td><td>1</td><td>60</td><td><a href="#" class="text-danger">X</a></td></tr>
            </tbody>
        </table>
    </div>

</main>




